{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "pretty": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["node", "jest"] // Add Jest to the types array
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "**/*.spec.ts"], // Adjust exclusions if needed
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
